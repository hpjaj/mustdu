<!DOCTYPE html>
<html>
<head>
  <title>Mustdu</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <% if flash[:notice] %>
    <div><%= flash[:notice] %></div>
  <% elsif flash[:error] %>
    <div><%= flash[:error] %></div>
  <% elsif flash[:alert] %>
    <div><%= flash[:alert] %></div>
  <% end %>

  <div><%= current_user.name if current_user %></div>
  <% if current_user %>
    <div><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></div>
  <% end %>
  
<%= yield %>

</body>
</html>
